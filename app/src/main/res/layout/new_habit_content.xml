<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outlinedTextHabit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="What habit would you like to work on?"
                app:boxCornerRadiusBottomEnd="@dimen/corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/corner_radius"
                app:boxCornerRadiusTopStart="@dimen/corner_radius"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextHabit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="How often would you like to repeat this habit?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/outlinedTextHabit" />


            <Button
                android:id="@+id/buttonDaily"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:text="Daily"
                app:cornerRadius="@dimen/corner_radius"
                app:layout_constraintEnd_toStartOf="@+id/buttonWeekly"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textRepeat"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/buttonWeekly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@android:color/white"
                android:text="Weekly"
                android:textColor="@color/colorPrimary"
                app:cornerRadius="@dimen/corner_radius"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonDaily"
                app:layout_constraintEnd_toStartOf="@+id/buttonMonthly"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonDaily"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/buttonMonthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@android:color/white"
                android:text="Monthly"
                android:textColor="@color/colorPrimary"
                app:cornerRadius="@dimen/corner_radius"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonWeekly"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonWeekly"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/textWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="When?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonDaily" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintWhen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textWhen">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintDaily"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/buttonSunday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="@android:color/white"
                        android:padding="10dp"
                        android:text="S"
                        android:textColor="@color/colorPrimary"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintEnd_toStartOf="@+id/buttonMonday"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <Button
                        android:id="@+id/buttonMonday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@android:color/white"
                        android:padding="10dp"
                        android:text="M"
                        android:textColor="@color/colorPrimary"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintBaseline_toBaselineOf="@+id/buttonSunday"
                        app:layout_constraintEnd_toStartOf="@+id/buttonTuesday"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/buttonSunday"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <Button
                        android:id="@+id/buttonTuesday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@android:color/white"
                        android:padding="10dp"
                        android:text="T"
                        android:textColor="@color/colorPrimary"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMonday"
                        app:layout_constraintEnd_toStartOf="@+id/buttonWednesday"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/buttonMonday"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <Button
                        android:id="@+id/buttonWednesday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@android:color/white"
                        android:padding="10dp"
                        android:text="W"
                        android:textColor="@color/colorPrimary"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintBaseline_toBaselineOf="@+id/buttonTuesday"
                        app:layout_constraintEnd_toStartOf="@+id/buttonThursday"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/buttonTuesday"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <Button
                        android:id="@+id/buttonThursday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@android:color/white"
                        android:padding="10dp"
                        android:text="T"
                        android:textColor="@color/colorPrimary"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintBaseline_toBaselineOf="@+id/buttonWednesday"
                        app:layout_constraintEnd_toStartOf="@+id/buttonFriday"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/buttonWednesday"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <Button
                        android:id="@+id/buttonFriday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@android:color/white"
                        android:padding="10dp"
                        android:text="F"
                        android:textColor="@color/colorPrimary"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintBaseline_toBaselineOf="@+id/buttonThursday"
                        app:layout_constraintEnd_toStartOf="@+id/buttonSaturday"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/buttonThursday"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <Button
                        android:id="@+id/buttonSaturday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@android:color/white"
                        android:padding="10dp"
                        android:text="S"
                        android:textColor="@color/colorPrimary"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintBaseline_toBaselineOf="@+id/buttonFriday"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/buttonFriday"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <Button
                        android:id="@+id/buttonEveryday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:padding="10dp"
                        android:text="Everyday"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonWednesday"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintWeekly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textViewEvery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Every"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/numberPickerWeeks"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <NumberPicker
                        android:id="@+id/numberPickerWeeks"
                        android:layout_width="35dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="16dp"
                        android:theme="@style/NumberPickerText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textViewWeeks"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textViewEvery"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textViewWeeks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="weeks"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/numberPickerWeeks"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintMonthly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/buttonFirst"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="First of the month"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintEnd_toStartOf="@+id/buttonLast"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <Button
                        android:id="@+id/buttonLast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@color/white"
                        android:text="Last of the month"
                        android:textColor="@color/colorPrimary"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintBaseline_toBaselineOf="@+id/buttonFirst"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/buttonFirst"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <Button
                        android:id="@+id/buttonCustom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="Custom"
                        android:textColor="@color/colorPrimary"
                        app:cornerRadius="@dimen/corner_radius"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/numberPickerDayOfMonth"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonFirst"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <NumberPicker
                        android:id="@+id/numberPickerDayOfMonth"
                        android:layout_width="35dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:hapticFeedbackEnabled="true"
                        android:theme="@style/NumberPickerText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/buttonCustom"
                        app:layout_constraintTop_toBottomOf="@+id/buttonFirst" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Do you have a goal?"
                app:layout_constraintEnd_toStartOf="@+id/checkBoxGoal"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintWhen" />

            <CheckBox
                android:id="@+id/checkBoxGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/textGoal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textGoal" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintGoal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textGoal">

                <NumberPicker
                    android:id="@+id/numberPickerGoal"
                    android:layout_width="35dp"
                    android:layout_height="100dp"
                    android:theme="@style/NumberPickerText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textViewWeeks2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewWeeks2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="time(s)"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/numberPickerGoal"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textWhatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="What time would you like a reminder?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintGoal" />

            <TextView
                android:id="@+id/textReminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="96dp"
                android:text="12:00 PM"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textWhatTime" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>