<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar"
            tools:targetApi="27">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:datePickerStyle">@style/Theme.MyTheme.DatePicker</item>
        <item name="android:timePickerStyle">@style/Theme.MyTheme.TimePicker</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Medium</item>
        <item name="android:textViewStyle">@style/RubikTextViewStyle</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/comfortaab</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearance.Small" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_corner_radius</item>
    </style>

    <style name="Theme.MyTheme.TimePicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">@android:color/white</item>
        <item name="android:headerTimeTextAppearance">@style/DialogHeaderTextTheme</item>
        <item name="android:numbersTextColor">@android:color/black</item>
        <item name="android:numbersInnerTextColor">@android:color/black</item>
        <item name="android:amPmTextColor">@android:color/black</item>
    </style>

    <style name="Theme.MyTheme.DatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">calendar</item>
        <item name="android:headerBackground">@android:color/white</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/DialogHeaderTextTheme</item>
        <item name="android:headerMonthTextAppearance">@style/DialogHeaderTextTheme</item>
        <item name="android:headerYearTextAppearance">@style/DialogHeaderTextTheme</item>
    </style>

    <style name="DialogHeaderTextTheme" parent="">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RubikTextViewStyle" parent="">
        <item name="fontFamily">@font/rubikr</item>
    </style>

</resources>
